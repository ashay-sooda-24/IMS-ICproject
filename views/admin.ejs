<%- include('header'); -%>

<!-- ---------------Rendering table for admin page------------------------------ -->
<div class="container d-flex align-items-center justify-content-center" style="min-height: 50vh;  margin-top: 10vh;">
        
    <div class="card " max-width: 100%;  >
        
        <div class="container" style="overflow-x:scroll;">

            <table id="myTable"   class=" table ">
                
                    <thead>
                        <tr>
                            <th>#id</th>
                            <th>name</th>
                            <th>phone</th>
                            <th>email</th>
                            <th>education</th>
                            <th>design</th>
                            <th>Reasoning</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="status">
                        <% if(data.length!=0){
                            let i=1; data.forEach(function(data){%>
                                <tr class="">
                                    <td><%=i; %></td>
                                    <td><%=data.name %></td>
                                    <td><%=data.phone %></td>
                                    <td><%=data.email %></td>
                                    <td><%=data.education %></td>
                                    <td><%=data.design %></td>
                                    <td><%=data.userView %></td>
                                    <td id="valueStatus">
                                        <% if(data.status == 0){
                                        %>Hold<%
                                    }else if(data.status == "selected"){
                                        %>Selected<% 
                                    }else {
                                        %>Rejected<%
                                    }%>%>
                                      </td>
                                    <td>
                                        <% if(data.status == 0){
                                        %><a id="reject" class="actionBtn"  onclick="window.location.reload() "   href="/users/edit/current=accept/<%=data.id%>/<%=data.status%>">
                                            Reject</a>
                                            <a  href="/users/edit/current=reject/<%=data.id%>/<%=data.status%>">
                                            Accept</a><%
                                    }else if(data.status == "selected"){
                                        %><a id="reject" class="actionBtn" onclick="window.location.reload() "     href="/users/edit/current=accept/<%=data.id%>/<%=data.status%>">
                                            Reject</a><%
                                    }else {
                                        %><a class="actionBtn" onclick="window.location.reload() "    href="/users/edit/current=reject/<%=data.id%>/<%=data.status%>">
                                            Accept</a><%
                                    }%>%>
                                      </td>
                                </tr>
                                <% i++;
                            }) %> <% 
                        }else {
                            %> <tr>
                                <td colspan="9">No data Found</td>
                            </tr><%
                        }%>
                    </tbody>
                </table>
        </div>
        
        
    </div>
</div>

<%- include('footer'); -%>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
